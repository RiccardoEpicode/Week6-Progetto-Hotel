@model Booking.com.Models.Entities.ApplicationUser

@{
    ViewData["Title"] = "Update Users";
}

<div class="container py-5">

    <h2 class="fw-bold mb-4">Update Users</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <form asp-action="EditUser" method="post">

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Client.ClientId" />

                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <input asp-for="Client.FirstName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <input asp-for="Client.LastName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="Client.PhoneNumber" class="form-control" />
                    </div>

                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>

                    <a asp-action="Users" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>

            </form>

        </div>
    </div>

</div>
