@model Booking.com.Models.Entities.Room

@{
    ViewData["Title"] = "New Room";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <h3 class="fw-bold mb-3">Create new Room</h3>
                    <p class="text-muted mb-4">
                        Insert room details
                    </p>

                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- ROOM NUMBER -->
                        <div class="mb-3">
                            <label asp-for="RoomNumber" class="form-label">Room Number</label>
                            <input asp-for="RoomNumber" class="form-control" />
                        </div>

                        <!-- TYPE -->
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Room Type</label>
                            <input asp-for="Type" class="form-control" placeholder="Single / Double / Suite" />
                        </div>

                        <!-- PRICE -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price (€)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        </div>

                        <!-- IMAGE URL -->
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Room Image URL</label>
                            <input asp-for="ImageUrl"
                                   class="form-control"
                                   placeholder="https://images.pexels.com/..."
                                   oninput="previewImage(this.value)" />
                        </div>

                        <!-- IMAGE PREVIEW -->
                        <div class="mb-4 text-center">
                            <img id="imgPreview"
                                 src="https://via.placeholder.com/400x220?text=Room+Preview"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height:220px; object-fit:cover;" />
                        </div>

                        <!-- BUTTONS -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Rooms" class="btn btn-outline-secondary">
                                Return
                            </a>

                            <button type="submit" class="btn btn-dark px-4">
                                Save
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function previewImage(url) {
        const img = document.getElementById("imgPreview");
        img.src = url || "https://via.placeholder.com/400x220?text=Room+Preview";
    }
</script>
