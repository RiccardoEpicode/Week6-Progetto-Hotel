@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container py-5">

    <div class="mb-5">
        <h1 class="fw-bold">Admin Panel</h1>
        <p class="text-muted">Backoffice Management</p>
    </div>

    <div class="row g-4">

        <!-- ROOMS -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Manage Rooms</h5>
                    <p class="card-text text-muted">
                        Create, modify and delete the available rooms.
                    </p>
                    <a asp-action="Rooms" class="btn btn-dark w-100">
                        Go to Rooms
                    </a>
                </div>
            </div>
        </div>

        <!-- RESERVATIONS -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Manage Reservations</h5>
                    <p class="card-text text-muted">
                        Confirm, cancel or review bookings.
                    </p>
                    <a asp-action="Reservations" class="btn btn-dark w-100">
                        Go to Reservations
                    </a>
                </div>
            </div>
        </div>

        <!-- USERS -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Manage Users</h5>
                    <p class="card-text text-muted">
                        See, modify or deactivate users.
                    </p>
                    <a asp-action="Users" class="btn btn-dark w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
