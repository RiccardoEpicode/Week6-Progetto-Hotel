@{
    ViewBag.Title = "Register";
}

<h2>Crea nuovo dipendente</h2>

<form method="post" class="mt-4">
    <input name="email" type="email" class="form-control" placeholder="Email" required />
    <input name="password" type="password" class="form-control mt-2" placeholder="Password" required />

    <select name="role" class="form-control mt-2">
        @foreach (var r in ViewBag.Roles)
        {
            <option>@r</option>
        }
    </select>

    <button class="btn btn-success mt-3">Crea Utente</button>
</form>
