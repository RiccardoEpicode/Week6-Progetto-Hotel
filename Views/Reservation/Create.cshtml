@{
    ViewData["Title"] = "Book Rooms";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-body p-4">

                    <h3 class="mb-4 text-center">Book your Room</h3>

                    <form method="post">

                        <input type="hidden" name="roomId" value="@ViewBag.RoomId" />

                        <div class="mb-3">
                            <label class="form-label">Arrival</label>
                            <input type="date"
                                   name="startDate"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Departing</label>
                            <input type="date"
                                   name="endDate"
                                   class="form-control"
                                   required />
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                Dates are invalid!
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Room"
                               asp-action="Index"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit"
                                    class="btn btn-primary">
                                Confirm
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
