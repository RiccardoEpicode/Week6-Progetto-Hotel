<h2>Nuova Prenotazione</h2>

<form method="post">
    <label>Cliente</label>
    <select name="ClienteId" class="form-control">
        @foreach (var c in ViewBag.Clienti)
        {
            <option value="@c.ClienteId">@c.Nome @c.Cognome</option>
        }
    </select>

    <label class="mt-3">Camera</label>
    <select name="CameraId" class="form-control">
        @foreach (var c in ViewBag.Camere)
        {
            <option value="@c.CameraId">@c.Numero - @c.Tipo</option>
        }
    </select>

    <input name="DataInizio" type="date" class="form-control mt-3" required />
    <input name="DataFine" type="date" class="form-control mt-2" required />

    <select name="Stato" class="form-control mt-2">
        <option>In Attesa</option>
        <option>Confermata</option>
        <option>Annullata</option>
    </select>

    <button class="btn btn-success mt-3">Salva</button>
</form>
